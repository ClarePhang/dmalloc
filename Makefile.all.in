###############################################################################
# Makefile for the Malloc library.
# $Id: Makefile.all.in,v 1.40 1994/03/25 06:20:07 gray Exp $
###############################################################################

# default root installation directory
prefix = /usr/local

srcdir = @srcdir@
bindir = $(prefix)/bin
libdir = $(prefix)/lib
incdir = $(prefix)/include
infodir = $(prefix)/info

# default c-compiler
CC = @CC@

DEFS =
INCS = -I$(srcdir)
LIBS = @LIBS@

LIBRARY	= libmalloc_dbg.a
UTIL = malloc_dbg
INFOFILE = malloc.info

CCFLAGS = -g
LDFLAGS = -g

INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL_DATA@

###############################################################################
# End of system configuration section.
###############################################################################

SHELL = /bin/sh

HFLS = malloc_dbg.h
OBJS = arg_check.o chunk.o compat.o error.o heap.o malloc.o malloc_lp.o
OBJS_IN = malloc_lp.o

CFLAGS = $(CCFLAGS)
TEST = malloc_t

# .PHONY : all
all : $(LIBRARY) $(UTIL)

# .PHONY : clean
clean :
	rm -f a.out core *.o *.t

# .PHONY : clobber
clobber : clean
	rm -f $(LIBRARY) $(TEST) $(UTIL) malloc_dbg.h

# .PHONY : realclean
realclean : clobber

# .PHONY : distclean
distclean : clobber
	rm -f config.status Makefile conf.h malloc_dbg.2
#	rm -f configure

# .PHONY : installincs
installincs : $(HFLS)
	$(INSTALL_DATA) $(HFLS) $(incdir)

# .PHONY : installlib
installlib : installincs $(LIBRARY) $(OBJS_IN) $(INFOFILE)
	$(INSTALL_DATA) $(LIBRARY) $(libdir)
	@RANLIB@ $(libdir)/$(LIBRARY)
	@ echo 'Please install $(OBJS_IN) and $(INFOFILE) by hand if needed.'
#	$(INSTALL_DATA) $(OBJS_IN) $(libdir)
#	$(INSTALL_DATA) $(INFOFILE) $(infodir)

# .PHONY : install
install : installlib $(UTIL)
	$(INSTALL_PROGRAM) $(UTIL) $(bindir)

malloc_dbg.2 : configure
	$(SHELL) configure

malloc_dbg.h : malloc_dbg.1 malloc_dbg.2 malloc_dbg.3
	rm -f $@ $@.t
	cat malloc_dbg.1 malloc_dbg.2 malloc_dbg.3 > $@.t
	mv $@.t $@

$(LIBRARY) : $(OBJS)
	ar cr $(LIBRARY) $?
	@RANLIB@ $@
	- chmod 660 $@

$(UTIL) : $(UTIL).o argv.o compat.o
	rm -f $@
	$(CC) $(LDFLAGS) $(UTIL).o argv.o compat.o $(LIBS)
	mv a.out $@

# .PHONY : noansi
noansi : malloc_dbg.h Deansify.pl
	perl ./Deansify.pl *.[ch]

# .PHONY : tests
tests : $(TEST)

$(TEST) : $(TEST).o argv.o $(LIBRARY)
	rm -f $@
	$(CC) $(LDFLAGS) $(TEST).o argv.o $(LIBS) $(LIBRARY)
	mv a.out $@

#.PHONY : check light
check light : $(TEST)
	./$(TEST) -s -t 10000
	./$(TEST) -s -t 10000
	./$(TEST) -s -t 10000
	./$(TEST) -s -t 10000
	./$(TEST) -s -t 10000

#.PHONY : heavy
heavy : $(TEST) light
	./$(TEST) -s -t 100000
	./$(TEST) -s -t 100000
	./$(TEST) -s -t 100000

# %.o : %.c
.c.o :
	rm -f $@
	$(CC) $(CFLAGS) $(CPPFLAGS) $(DEFS) $(INCS) -c $< -o $@

.texi.info :
	makeinfo $<

#
# auto configure settings
#
Makefile : Makefile.in
	$(SHELL) config.status

conf.h : conf.h.in
	$(SHELL) config.status

config.status : configure
	$(SHELL) config.status --recheck

configure : configure.in
	cd $(srcdir); autoconf

###############################################################################
#
# These dependencies are automatically generated.  Do not edit by hand.
#

arg_check.o : arg_check.c malloc_dbg.h conf.h chunk.h malloc_loc.h debug_val.h \
  error.h arg_check.h 
argv.o : argv.c conf.h argv.h argv_loc.h version.h malloc_loc.h 
chunk.o : chunk.c malloc_dbg.h conf.h chunk.h malloc_loc.h chunk_loc.h compat.h \
  debug_val.h error.h error_val.h heap.h version.h 
compat.o : compat.c malloc_dbg.h conf.h compat.h malloc_loc.h 
error.o : error.c malloc_dbg.h conf.h compat.h malloc_loc.h debug_val.h error.h 
heap.o : heap.c malloc_dbg.h conf.h chunk.h malloc_loc.h compat.h debug_val.h \
  error.h error_val.h heap.h 
malloc.o : malloc.c malloc_dbg.h conf.h chunk.h malloc_loc.h compat.h debug_val.h \
  error.h error_str.h error_val.h heap.h malloc_lp.h return.h 
malloc_dbg.o : malloc_dbg.c argv.h malloc_dbg.h conf.h compat.h malloc_loc.h \
  debug_tok.h debug_val.h error_str.h error_val.h version.h 
malloc_lp.o : malloc_lp.c malloc_dbg.h conf.h malloc_loc.h malloc_lp.h 
malloc_t.o : malloc_t.c argv.h malloc_dbg.h conf.h 
prot.o : prot.c 
