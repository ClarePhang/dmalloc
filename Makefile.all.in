###############################################################################
# Makefile for the Malloc library.
# $Id: Makefile.all.in,v 1.31 1993/11/23 09:37:12 gray Exp $
###############################################################################

# default root installation directory
prefix = /usr/local

srcdir = @srcdir@
bindir = $(prefix)/bin
libdir = $(prefix)/lib
incdir = $(prefix)/include
infodir = $(prefix)/info

# default c-compiler
CC = @CC@

# argv subdirectory
ARGV = argv

DEFS =
INCS = -I$(srcdir) -I$(srcdir)/$(ARGV)
LIBS = @LIBS@ -L$(srcdir)/$(ARGV) -l$(ARGV)

LIBRARY	= libmalloc_dbg.a
UTIL = malloc_dbg
INFOFILE = malloc.info

CCFLAGS = -g @CCDEFS@
LDFLAGS = -g

INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL_DATA@

###############################################################################
# End of system configuration section.
###############################################################################

SHELL = /bin/sh

HFLS = malloc_dbg.h
OBJS = arg_check.o chunk.o compat.o error.o heap.o malloc.o malloc_lp.o
OBJS_IN = malloc_lp.o

CFLAGS = $(CCFLAGS)
TEST = malloc_t

# .PHONY : all
all : $(LIBRARY) $(UTIL)

# .PHONY : clean
clean :
	rm -f a.out core *.o *.t
	( cd $(ARGV) ; $(MAKE) $@ )

# .PHONY : clobber
clobber : clean
	rm -f $(LIBRARY) $(TEST) $(UTIL) malloc_dbg.h
	( cd $(ARGV) ; $(MAKE) $@ )

# .PHONY : realclean
realclean : clobber

# .PHONY : distclean
distclean : clobber
	rm -f config.status Makefile conf.h const.h
	( cd $(ARGV) ; $(MAKE) $@ )
#	rm -f configure

# .PHONY : installincs
installincs : $(HFLS)
	$(INSTALL_DATA) $(HFLS) $(incdir)

# .PHONY : installlib
installlib : installincs $(LIBRARY) $(OBJS_IN) $(INFOFILE)
	$(INSTALL_DATA) $(LIBRARY) $(libdir)
	@RANLIB@ $(libdir)/$(LIBRARY)
	@ echo 'Please install $(OBJS_IN) and $(INFOFILE) by hand if needed.'
#	$(INSTALL_DATA) $(OBJS_IN) $(libdir)
#	$(INSTALL_DATA) $(INFOFILE) $(infodir)

# .PHONY : install
install : installlib $(UTIL)
	$(INSTALL_PROGRAM) $(UTIL) $(bindir)

malloc_dbg.h : malloc_dbg.1 const.h malloc_dbg.2
	rm -f $@ $@.t
	cat malloc_dbg.1 const.h malloc_dbg.2 > $@.t
	mv $@.t $@

$(LIBRARY) : $(OBJS)
	ar cr $(LIBRARY) $?
	@RANLIB@ $@
	- chmod 660 $@

$(UTIL) : malloc_dbg.o $(LIBRARY) $(ARGV)/lib$(ARGV).a
	rm -f $@
	$(CC) $(LDFLAGS) $@.o $(LIBS)
	mv a.out $@

$(ARGV)/$(ARGV).h :
	( cd $(ARGV) ; $(MAKE) $(ARGV).h )

$(ARGV)/lib$(ARGV).a :
	( cd $(ARGV) ; $(MAKE) )

# .PHONY : tests
tests : $(TEST)

$(TEST) : $(TEST).o $(LIBRARY) $(ARGV)/lib$(ARGV).a
	rm -f $@
	$(CC) $(LDFLAGS) $(TEST).o $(LIBS) $(LIBRARY)
	mv a.out $@

#.PHONY : light
light : $(TEST)
	$(TEST) -s -t 10000
	$(TEST) -s -t 10000
	$(TEST) -s -t 10000
	$(TEST) -s -t 10000
	$(TEST) -s -t 10000

#.PHONY : heavy
heavy : $(TEST) light
	$(TEST) -s -t 100000
	$(TEST) -s -t 100000
	$(TEST) -s -t 100000

# %.o : %.c
.c.o :
	rm -f $@
	$(CC) $(CFLAGS) $(CPPFLAGS) $(DEFS) $(INCS) -c $< -o $@

.texi.info :
	makeinfo $<

###############################################################################
#
# These dependencies are automatically generated.  Do not edit by hand.
#

arg_check.o : arg_check.c malloc_dbg.h conf.h chunk.h malloc_loc.h dbg_values.h \
  error.h arg_check.h 
chunk.o : chunk.c malloc_dbg.h conf.h chunk.h malloc_loc.h chunk_loc.h compat.h \
  dbg_values.h error.h error_val.h heap.h version.h 
compat.o : compat.c malloc_dbg.h conf.h compat.h malloc_loc.h 
error.o : error.c malloc_dbg.h conf.h chunk.h malloc_loc.h compat.h dbg_values.h \
  error.h 
heap.o : heap.c malloc_dbg.h conf.h chunk.h malloc_loc.h compat.h dbg_values.h \
  error.h error_val.h heap.h 
malloc.o : malloc.c malloc_dbg.h conf.h chunk.h malloc_loc.h compat.h dbg_values.h \
  error.h error_str.h error_val.h heap.h malloc_lp.h return.h 
malloc_dbg.o : malloc_dbg.c argv/argv.h malloc_dbg.h conf.h compat.h malloc_loc.h \
  dbg_tokens.h dbg_values.h version.h 
malloc_lp.o : malloc_lp.c malloc_dbg.h conf.h malloc_loc.h 
malloc_t.o : malloc_t.c malloc_dbg.h 
