crc.o: crc.c
dmalloc.o: dmalloc.c dmalloc_argv.h conf.h settings.h dmalloc.h \
 compat.h debug_tok.h dmalloc_loc.h debug_val.h env.h error_str.h \
 error_val.h version.h
dmalloc_argv.o: dmalloc_argv.c dmalloc_argv.h dmalloc_argv_loc.h
dmalloc_lp.o: dmalloc_lp.c dmalloc.h conf.h settings.h dmalloc_loc.h \
 dmalloc_lp.h
dmalloc_t.o: dmalloc_t.c dmalloc_argv.h dmalloc.h conf.h settings.h \
 debug_val.h dmalloc_loc.h
env.o: env.c conf.h settings.h dmalloc.h dmalloc_loc.h debug_tok.h \
 debug_val.h env.h error.h
error.o: error.c conf.h settings.h dmalloc.h compat.h debug_val.h \
 dmalloc_loc.h env.h error.h error_val.h version.h
heap.o: heap.c dmalloc.h conf.h settings.h chunk.h compat.h \
 debug_val.h dmalloc_loc.h error.h error_val.h heap.h
malloc.o: malloc.c conf.h settings.h return.h dmalloc.h chunk.h \
 compat.h debug_val.h dmalloc_loc.h env.h error.h error_str.h \
