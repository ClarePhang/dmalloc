###############################################################################
# Makefile for the DMalloc library.
# $Id: Makefile.all.in,v 1.54 1995/05/05 16:53:31 gray Exp $
###############################################################################

# default root installation directory
prefix = @prefix@
exec_prefix = @exec_prefix@

srcdir = @srcdir@
VPATH = @srcdir@

bindir = $(exec_prefix)/bin
libdir = $(exec_prefix)/lib
incdir = $(prefix)/include
infodir = $(prefix)/info

# default c-compiler
CC = @CC@

DEFS =
INCS = -I. -I$(srcdir)
LIBS = -L. @LIBS@

LIBNAME	= dmalloc
LIBRARY	= lib$(LIBNAME).a
# library with dmalloc disabled
LIB_DIS	= libdmalloclp.a
UTIL = dmalloc
INFOFILE = dmalloc.info

CCFLAGS = -g
#LDFLAGS = -g
LDFLAGS =

INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL_DATA@

###############################################################################
# End of system configuration section.
###############################################################################

SHELL = /bin/sh

HFLS = dmalloc.h
OBJS = arg_check.o chunk.o compat.o dmalloc_lp.o env.o error.o heap.o malloc.o

CFLAGS = $(CCFLAGS)
TEST = dmalloc_t

all : $(LIBRARY) $(LIB_DIS) $(UTIL)

clean :
	rm -f a.out core *.o *.t
	rm -f $(LIBRARY) $(LIB_DIS) $(TEST) $(UTIL) dmalloc.h

clobber : clean

realclean : clobber

distclean : clobber
	rm -f Makefile config.status config.cache config.log conf.h dmalloc.h.2
#	rm -f configure

installdirs :
	$(srcdir)/mkinstalldirs $(incdir) $(libdir) $(infodir) $(bindir)

installincs : $(HFLS)
	$(INSTALL_DATA) $(HFLS) $(incdir)

installlib : installincs $(LIBRARY) $(LIB_DIS) $(INFOFILE)
	$(INSTALL_DATA) $(LIBRARY) $(libdir)
	@RANLIB@ $(libdir)/$(LIBRARY)
	$(INSTALL_DATA) $(LIB_DIS) $(libdir)
	@RANLIB@ $(libdir)/$(LIB_DIS)
	$(INSTALL_DATA) $(srcdir)/$(INFOFILE) $(infodir)

install : installdirs installlib $(UTIL)
	$(INSTALL_PROGRAM) $(UTIL) $(bindir)

dmalloc.h.2 : configure
	$(SHELL) configure

dmalloc.h : dmalloc.h.1 dmalloc.h.2 dmalloc.h.3
	rm -f $@ $@.t
	cat $(srcdir)/dmalloc.h.1 dmalloc.h.2 $(srcdir)/dmalloc.h.3 > $@.t
	mv $@.t $@

$(LIBRARY) : $(OBJS)
	ar cr $(LIBRARY) $?
	@RANLIB@ $@

$(LIB_DIS) : dmalloc_lp.o
	ar cr $(LIB_DIS) $?
	@RANLIB@ $@

$(UTIL) : $(UTIL).o argv.o compat.o env.o
	rm -f $@
	$(CC) $(LDFLAGS) $(UTIL).o argv.o compat.o env.o $(LIBS)
	mv a.out $@

noansi : dmalloc.h Deansify.pl
	perl $(srcdir)/Deansify.pl *.[ch]

tests : $(TEST)

$(TEST) : $(TEST).o argv.o $(LIBRARY)
	rm -f $@
	$(CC) $(LDFLAGS) $(TEST).o argv.o $(LIBS) -l$(LIBNAME)
	mv a.out $@

check light : $(TEST)
	./$(TEST) -s -t 10000
	./$(TEST) -s -t 10000
	./$(TEST) -s -t 10000
	./$(TEST) -s -t 10000
	./$(TEST) -s -t 10000

heavy : $(TEST) light
	./$(TEST) -s -t 100000
	./$(TEST) -s -t 100000
	./$(TEST) -s -t 100000

# %.o : %.c
.c.o :
	rm -f $@
	$(CC) $(CFLAGS) $(CPPFLAGS) $(DEFS) $(INCS) -c $<

.texi.info :
	makeinfo --no-split $<

#
# auto configure settings
#
Makefile : Makefile.in
	$(SHELL) config.status

conf.h : conf.h.in
	$(SHELL) config.status

config.status : configure
	$(SHELL) config.status --recheck

configure : configure.in
	cd $(srcdir); autoconf

###############################################################################
#
# These dependencies are automatically generated.  Do not edit by hand.
#

arg_check.o : arg_check.c dmalloc.h conf.h chunk.h dmalloc_loc.h debug_val.h \
  error.h arg_check.h 
argv.o : argv.c argv.h argv_loc.h 
chunk.o : chunk.c dmalloc.h conf.h chunk.h dmalloc_loc.h chunk_loc.h compat.h \
  debug_val.h error.h error_str.h error_val.h heap.h version.h 
compat.o : compat.c dmalloc.h conf.h compat.h dmalloc_loc.h 
dmalloc.o : dmalloc.c argv.h dmalloc.h conf.h compat.h dmalloc_loc.h debug_tok.h \
  debug_val.h env.h error_str.h error_val.h version.h 
dmalloc_lp.o : dmalloc_lp.c dmalloc.h conf.h dmalloc_loc.h dmalloc_lp.h 
dmalloc_t.o : dmalloc_t.c argv.h dmalloc.h conf.h 
env.o : env.c dmalloc.h dmalloc_loc.h conf.h debug_tok.h debug_val.h env.h error.h 
error.o : error.c dmalloc.h conf.h compat.h dmalloc_loc.h debug_val.h env.h \
  error.h error_val.h 
heap.o : heap.c dmalloc.h conf.h chunk.h dmalloc_loc.h compat.h debug_val.h \
  error.h error_val.h heap.h 
malloc.o : malloc.c dmalloc.h conf.h chunk.h dmalloc_loc.h compat.h debug_val.h \
  env.h error.h error_str.h error_val.h heap.h dmalloc_lp.h return.h 
